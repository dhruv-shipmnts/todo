

<%= link_to 'New Note', new_note_path %>

<h1>Listing Notes</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Note</th>
    <th></th>
  </tr>

  <% @notes.each do |note| %>
    <tr>
      <td><%= note.title %></td>
      <td><%= note.text %></td>
      <td><%= link_to 'Show', note_path(note) %></td>
      <td><%= link_to 'Edit', edit_note_path(note) %></td>
      <td><%= link_to 'Delete', note_path(note),
                      method: :delete,
                      data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>